<!-- Modal -->
<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Araç Kiralama Koşulları</h2>

        <button class="accordion">Yaş Sınırlamaları</button>
        <div class="panel">
